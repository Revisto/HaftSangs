var speed = 100
var moving = true

func _process(delta):
	if moving:
		for cloud in get_children():
			cloud.position.x += speed * delta
			if cloud.position.x > get_viewport().size.x:
				cloud.position.x = -cloud.texture.get_size().x

func move():
	moving = true

func stop_move():
	moving = false
